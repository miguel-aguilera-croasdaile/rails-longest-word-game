<div class="wrapper">

  <h2> Your options</h2>

  <% @array_to_string = @letters.join%>

  <ul id="letters_table">
    <% @letters.each do |letter| %>
    <li><%= letter.capitalize %></li>
    <% end %>
  </ul>

  <h2>Enter your word:</h2>

  <form action="score">
    <input type="text" name="word">
    <input type = "hidden" id="letters" name="letters" type= "hidden" value= <%= @array_to_string %>>
    <input type="submit" value= "Go!" style="font-family: 'Roboto', sans-serif;">
  </form>

</div>
